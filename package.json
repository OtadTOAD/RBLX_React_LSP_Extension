{
  "name": "rblx-react-lsp",
  "displayName": "RBLX React LSP",
  "description": "",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "workspaceContains:/*.project.json"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OtadTOAD/RBLX_React_LSP_Extension.git"
  },
  "publisher": "OtadTOAD",
  "contributes": {
    "commands": [
      {
        "title": "Generate API Metadata",
        "command": "rblx-react-lsp.genMetadata"
      }
    ],
    "languages": [
      {
        "id": "lua",
        "aliases": [
          "Luau"
        ],
        "extensions": [
          ".lua",
          ".luau"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "electron": "^34.2.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}